<included>
  <!-- CERQUAL -->
  <logger additivity="false" level="INFO" name="fr.cerqual">
    <appender-ref ref="CONSOLE"/>
  </logger>
  <!-- REQUEST -->
  <logger additivity="false" name="org.springframework.web.filter.CommonsRequestLoggingFilter">
    <appender-ref ref="CONSOLE"/>
    <level value="DEBUG"/>
  </logger>
  <!-- SPRING -->
  <logger level="INFO" name="org.springframework"/>
  <!--HIBERNATE -->
  <logger additivity="false" name="org.hibernate.type">
    <appender-ref ref="CONSOLE"/>
    <level value="INFO"/>
  </logger>
  <!-- ROOT -->
  <root level="WARN">
    <appender-ref ref="CONSOLE"/>
  </root>
</included>
